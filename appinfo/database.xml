<?xml version="1.0" encoding="utf-8" ?>
<database>
	<name>*dbname*</name>
	<create>true</create>
	<overwrite>false</overwrite>
	<charset>utf8</charset>

	<table>
		<name>*dbprefix*guests</name>

		<declaration>

			<field>
				<name>id</name>
				<type>integer</type>
				<default>0</default>
				<notnull>true</notnull>
				<autoincrement>1</autoincrement>
				<unsigned>true</unsigned>
				<length>4</length>
			</field>

			<field>
				<name>uid</name>
				<type>text</type>
				<notnull>true</notnull>
				<length>255</length>
			</field>

			<field>
				<name>hash</name>
				<type>text</type>
				<notnull>false</notnull>
				<length>64</length>
			</field>

			<index>
				<name>guests_users_pKey</name>
				<primary>true</primary>
				<field>
					<name>id</name>
					<sorting>ascending</sorting>
				</field>
			</index>

			<index>
				<name>guests_uid_index</name>
				<unique>true</unique>
				<field>
					<name>uid</name>
					<sorting>ascending</sorting>
				</field>
			</index>

		</declaration>
	</table>

</database>
